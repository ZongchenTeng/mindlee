<div class="content container add-content">
    <div class="schedule_header container">
        <h2>Your Activity</h2>
    </div>

    <div class="schedule_body w3layouts">
        <form id="addActivityForm" role="form" method="get" action="/add_activity">
            <div class="form-group">
                <label for="name">Title:</label>
                <input type="text" class="form-control" id="name" placeholder="Name" name="name" required="true">
            </div>
            <div class="form-group">
                <label for="date">Date:</label>
                <input type="date" class="form-control" id="date" placeholder="Date" name="date" required="true">
            </div>
            <div class="form-group">
                <label for="time"> Time: </label>
                <input type="time" class="form-control" id="time" placeholder="Time" name="time" required="true">
            </div>

            <!--add time with bootstrap-timepicker-->
            <div class="input-group bootstrap-timepicker timepicker">
                <input id="timepicker1" type="text" class="form-control input-small">
                <span class="input-group-addon"><i class="glyphicon glyphicon-time"></i></span>
            </div>




            <div class="form-group">
                <h4 class="panel-title">Stress Level</h4>
                <input type="range" class="form-control" id="stress_level" value=50 name="stress_level" required="true" title="Stress Level">
            </div>


            <a href="/home"> <input type="button" id="cancelAdd" class="btn btn-default" value="Cancel" action="/"/> </a>
            <input type="submit" id="submitBtn" class="btn btn-default" value="Save"/>
        </form>
    </div>
</div>

<script type="text/javascript">
    $('#timepicker1').timepicker();
</script>
