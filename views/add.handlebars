<div class="jumbotron main-content content container add-content bounceInUp">
    <div class="schedule_header container">
        <h2>Your Activity</h2>
    </div>
    <div class="schedule_body w3layouts">
        <form id="addActivityForm" role="form" method="get" action="/add_activity">
            <div class="form-group">
                <label for="title">Title:</label>
                <input type="text" class="form-control" id="title" placeholder="Name" name="title" value="Meeting" required="true">
            </div>
            <div class="form-group">
                <label for="date">Date:</label>
                <input type="date" class="form-control" id="date" placeholder="Date" name="date" value="2017-02-14" required="true">
            </div>

            <!--add time with bootstrap-timepicker-->
            <div class="form-group bootstrap-timepicker timepicker">
                <label for="time"> Time: </label>
                <input name="time" id="time" type="text" class="form-control" value="14:00" required="true" title="time">
            </div>


            <div class="form-group">
                <h4 class="panel-title">Stress Level</h4>
                <input type="range" class="form-control" id="stress_level" value=50 name="stress_level" required="true" title="Stress Level">
            </div>


            <a href="/home"> <input type="button" id="cancelAdd" class="btn btn-default" value="Cancel" action="/"/> </a>
            <input type="submit" id="submitBtn" class="btn btn-default" value="Save"/>
        </form>
    </div>
</div>

<script type="text/javascript">
    $('#time').timepicker( {
        showInputs: false
    });
</script>
